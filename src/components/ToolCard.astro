---
interface Props {
  name: string;
  description: string;
  slug: string;
  github?: string;
  tags?: string[];
}

const { name, description, slug, github, tags = [] } = Astro.props;
---

<article class="group border border-[var(--color-border)] rounded-lg p-5 bg-[var(--color-bg-card)] hover:border-[var(--color-accent-dim)] transition-colors">
  <a href={`/tools/${slug}`} class="block">
    <div class="flex items-center gap-3 mb-3">
      <div class="w-10 h-10 rounded-lg bg-[var(--color-bg-alt)] flex items-center justify-center text-[var(--color-accent)]">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
        </svg>
      </div>
      <h3 class="font-mono font-semibold text-lg text-[var(--color-text)] group-hover:text-[var(--color-accent)] transition-colors">
        {name}
      </h3>
    </div>
    
    <p class="text-[var(--color-text-muted)] text-sm mb-4">
      {description}
    </p>
    
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-2 flex-wrap">
        {tags.map(tag => (
          <span class="text-xs font-mono px-2 py-1 rounded bg-[var(--color-bg-alt)] text-[var(--color-text-muted)]">
            {tag}
          </span>
        ))}
      </div>
      
      {github && (
        <span class="text-xs text-[var(--color-text-muted)] font-mono">
          GitHub â†’
        </span>
      )}
    </div>
  </a>
</article>
